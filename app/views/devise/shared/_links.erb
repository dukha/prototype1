<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t($L+"forgotten_password"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t($L+"no_confirmation_instructions"), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t($L+"no_unlock_instructions"), new_unlock_path(resource_name) %><br />
<% end -%>
